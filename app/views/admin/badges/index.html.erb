<div class="row justify-content-center mt-3">
  <div class="col col-md-12">
    <h2>All Badges</h2>

    <%= render 'shared/errors', resource: @badge %>
    <table class="table table-striped">
      <thead>
        <tr class="table-primary">
          <th>Title</th>
          <th>Image</th>
          <th colspan="3" class="text-center">Actions</th>
