<h1><%= @test.title %></h1>

<p><%= link_to 'New question', new_admin_test_question_path(test_id: @test.id) %></p>

<h1> A list of questions:</h1>

<table>
  <tr>
    <th>Body</th>
    <th colspan="3">Actions</th>
  </tr>

  <% @questions.each do |question| %>
  <tr>
    <td><%= question.body %></td>
    <td><%= link_to 'Show', admin_question_path(question) %></td>
    <td><%= link_to 'Edit', edit_admin_question_path(question) %></td>
    <td><%= link_to 'Delete', admin_question_path(question), method: :delete, data: { confirm: 'Are you sure?' } %>
    </td>
  </tr>
  <% end %>
</table>

<p><%= link_to 'Back', admin_tests_path %></p>
