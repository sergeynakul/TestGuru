<%= form_with model: [:admin, @test], local: true do |form| %>
  <%= render 'shared/errors', resource: @test %>

  <p>
    <%= form.label :title %>
    <%= form.text_field :title, id: :test_title %>
  </p>

  <p>
    <%= form.label :level %>
    <%= form.text_field :level, id: :test_title %>
  </p>

  <p>
    <%= form.label :category_id %>
    <%= form.collection_select :category_id, Category.all, :id, :title, prompt: true %>
  </p>
  
  <p>
    <%= form.label :timer %><br>
    <%= form.number_field :timer, min: 0 %>  в минутах
  </p>

  <p>
    <%= form.hidden_field :admin_id, value: current_user.id %>
  </p>

  <p><%= form.submit %></p>
<% end %>

<p><%= link_to t('.back'), admin_tests_path %></p>
