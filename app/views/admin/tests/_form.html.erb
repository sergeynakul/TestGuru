<%= form_with model: [:admin, @test], local: true do |form| %>
  <%= render 'shared/errors', resource: @test %>

  <p>
    <%= form.label :title %>
    <%= form.text_field :title, id: :test_title %>
  </p>

  <p>
    <%= form.label :level %>
    <%= form.text_field :level, id: :test_title %>
  </p>

  <p>
    <%= form.label :category_id %>
    <%= form.select :category_id, Category.ids, include_blank: 'Please choose', id: :test_category_id %>
  </p>

  <p><%= form.submit %></p>
<% end %>

<p><%= link_to 'Back', admin_tests_path %></p>
